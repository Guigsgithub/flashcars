<div class="container">
  <div class="row d-grid justify-content-between mt-5 mb-5">
    <div class="col bg-light pt-2 pb-2">
      <h2>My profile</h2>
      <p>Email: </br> <%= @user.email %></p>
      <p>Username: </br> <%= @user.username %></p>
    </div>

    <div class="col bg-light ml-2 pt-2 pb-2">
      <h2>My cars</h2>
      <div class="button-add">
        <p><%= link_to "âž• Add a new car", new_car_path %></p>
      </div>
      <% @cars.each do |car| %>
        <div class="grey-cards">
         
          <p>Car model: </br> <%= car.model %></p>
          <p>Car price: </br><%= car.price %>$/day</p>
          <p>Car capacity:</br><%= car.capacity %> people</p>
          <%= link_to "See the car", car_path(car)%>
          <%= link_to "Update the car", edit_car_path(car) %>
          <div class="button-destroy">
            <button id="sweet-alert-demo">ðŸ—‘</button>
            <%= link_to "", user_path(current_user), method: :delete, id: "delete-link", class: "hidden" %>
          </div>
        </div>
      <% end %>
    </div>

      <div class="col bg-light ml-2 pt-2 pb-2">
        <% counter = 0 %>
        <h2>Reservation:</h2>
        <p><% @rentals.each do |rental| %></p>
          <div class="grey-cards">
            <% counter += 1 %>
            <p>Booking number: <%= counter %></p>
            <p> Start date: </br> <%= rental.start_date %></p>
            <p>End date: </br><%= rental.end_date %> </p>
            <p>Car model: </br><%= rental.car.model %></p>
            <div class="button-destroy">
              <button id="sweet-alert-demo2">ðŸ—‘</button>
              <%= link_to "", user_path(current_user), method: :delete, id: "delete-link2", class: "hidden"%>
            </div>
          </div>
        <% end %>
        <div class="button-add">
          <%= link_to "âž• Book a car", root_path %>
        </div>
      </div>
  </div>
</div>
