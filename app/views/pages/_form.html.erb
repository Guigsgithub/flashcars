<%#= simple_form_for @car_preferences do |f| %>
  <%#= f.input "capacity",
  class: 'input-form' %>

  <%#= f.input "location",
  class: 'input-form' %>

  <%#= f.input "start_date",
  as: :date,
  class: 'input-form' %>

  <%#= f.input "end_date",
  as: :date,
  class: 'input-form' %>

  <%#= link_to "Find âš¡ Cars", cars_path, class: 'btn btn-warning mx-2'%>
<%# end %>


<%= form_tag cars_path, class: "form-tag", method: :get do %>
  <div class="d-flex justify-content-between">
    <%= text_field_tag :query_capacity,
      params[:query_capacity],
      class: "form-control",
      placeholder: "Capacity"
    %>
    <%= text_field_tag :query_location,
      params[:query_location],
      class: "form-control",
      placeholder: "City"
    %>
     <%= date_field_tag :query_start_date,
      params[:query_start_date],
      value: Date.today,
      class: "form-control",
      placeholder: "from"
    %>
     <%= date_field_tag :query_end_date,
      params[:query_end_date],
      value: Date.today,
      class: "form-control",
      placeholder: "to"
    %>
  </div>
  <div class="d-flex justify-content-center">
    <%= submit_tag "Search", class: "btn btn-primary" %>
  </div>
<% end %>


