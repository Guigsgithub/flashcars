<div class="index-layout">
  <div class="index-content d-flex">
    <div class="index-cards flex-grow-1">
      <% @cars.each do  |car| %>
          <div class="index-card">
              <% if car.photo.attached? %>
                <%= cl_image_tag car.photo.key, crop: :fill, class:"index-img"%>
              <% else %>
                <img src="https://i.pinimg.com/originals/b3/b0/0d/b3b00d8a4250d30936c290faa10c5f36.jpg" alt="Car picture" class="index-img">
              <% end %>
              <div>
                <h4>💸 <%= car.price %> €/day</h4>
                <h5>👨‍👩‍👦‍👦 <%= car.capacity %> person(s)</h5>
                <h6>🗺️ <%= car.location %></h6>
                <h6>👤 <%= link_to User.find(car.user_id).username, user_path(User.find(car.user_id)) %></h6>
              </div>
            <%= link_to "Rent !", car_path(car), class:"btn btn-primary" %>
          </div>
    <% end %>
  </div>
    <div id="map"
      style="width: 80%; height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
