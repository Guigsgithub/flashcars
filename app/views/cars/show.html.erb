<div class="container" style="background-color:#EAEAEA">
  <h1 class="text-dark d-flex justify-content-center">🚙 rent a beautiful <%= @car[:model] %> ! 🚙</h1>
    <div class="picture-and-comment d-flex p-2 bg-white">
      <% if @car.photo.attached? %>
        <%= cl_image_tag @car.photo.key, crop: :fill, class:"show-img"%>
      <% else %>
        <img src="https://i.pinimg.com/originals/b3/b0/0d/b3b00d8a4250d30936c290faa10c5f36.jpg" alt="Car picture" class="show-img">
      <% end %>
      <div class="comment">
        <h3 class="d-flex justify-content-center">The owner's word</h3>
        <h5> <%= @car.description %> </h5>
        <%= link_to "➕ Book this car", new_car_rental_path(@car), class:"btn btn-primary"%>
      </div>
    </div>
    <div class="car-and-owner-details d-flex justify-content-around">
      <div class="car-details bg-white p-2 mt-2">
        <h3>What you get :</h3>
        <h5>💸 <%= @car.price %>€ a day💸</h5>
        <h6>🗺️ available in <%= @car.location %> 🗺️</h6>
        <h6>👨‍👩‍👦‍👦 <%= @car.capacity %> seats 👨‍👩‍👦‍👦</h6>
      </div>
      <div class="owner-details bg-white p-2 mt-2">
        <h3>Who you get it from :</h3>
          <div class="owner-pic-and-details d-flex">
            <img src="https://randomuser.me/api/portraits/men/0.jpg" alt="" class="avatar align-middle">
            <div class="user-details">
              <p class="p-2"><%= link_to User.find(@car.user_id).username, user_path(User.find(@car.user_id)) %></p>
              <p class="p-2"><%= mail_to User.find(@car.user_id).email, "Contact the owner" %></p>
            </div>
          </div>
      </div>
    </div>
    <div class="map-and-form d-flex justify-content-around mt-2 mb-2">

      <div class="form" id="rental-form-div" data-rentals="<%= @rentals_dates.to_json %>">
        <%= simple_form_for [@car, @rental] do |f| %>
          <%= f.input :start_date, label: "Sélectionnez vos dates:", as: :string, required: false, input_html: { id: "range_start", class: "d-none"} %>
          <%= f.input :end_date, label: false, as: :string, required: false, input_html: { id: "range_end", class: "d-none" } %>
          <%= f.submit "Rent this car", class: 'btn btn-primary' %>
        <% end %>
      </div>
      <div class="map">
        <%= link_to 'Leave a review', new_car_review_path(@car) %>
        <ul class="list-group">
          <% @car.reviews.each do |review| %>
            <li class="list-group-item">
              Rating : <%= "⚡︎" * review.rating %> <br/>
              <%= review.content %> <br/>
              <%= link_to "Remove", review_path(review), method: :delete, data: { confirm: "Are you sure?" } %>
            </li>       
           <% end %>
        </ul>
      </div>
    </div>
</div>
