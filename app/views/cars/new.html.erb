<h2>🏎 Add your car please 🏎</h2>
<div class="container">
  <%= simple_form_for(@car) do |f| %>
    <div class="form-inputs d-flex justify-content-center">
      <%= f.input :model,
                  required: true %>
      <%= f.input :price,
                  required: true %>
      <%= f.input :location,
                  required: true %>
      <%= f.input :capacity,
                  required: true %>
      <%= f.input :description,
                  required: true %>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.input :photo, label: 'Show us your car !', as: :file %>
    </div>      

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Add your car" %>
    </div>
    <%= link_to "Back", user_path(current_user) %>
  <% end %>
</div>
