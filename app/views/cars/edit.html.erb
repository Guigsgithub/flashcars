<h2>🏎 Edit your car please 🏎</h2>

<%= simple_form_for(@car) do |f| %>
  <div class="form-inputs">
    <%= f.input :model,
                required: true %>
    <%= f.input :price,
                required: true %>
    <%= f.input :location,
                required: true %>
    <%= f.input :capacity,
                required: true %>
    <%= f.input :description,
                required: true %>
    <%= f.input :photo, label: 'Show us your car !', as: :file %>        
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update your car" %>
  </div>
  <%= link_to "Back", user_path(current_user) %>
<% end %>
